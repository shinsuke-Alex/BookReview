<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container">
          <div class="navbar-header">
  		    <%= link_to "Book Review", root_path, class: "navbar-brand" %>
  		  </div>

          <ul class="nav navbar-nav">
				<li><%= link_to "Sign Up", new_user_registration_path, class:"btn btn-outline-info" %></li>
				<% if user_signed_in? %>
				  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"btn btn-outline-info" %></li>
				<% else %>
				  <li><%= link_to "Log In", new_user_session_path, class:"btn btn-primary" %></li>
				<% end %>
		  </ul>

          <% if user_signed_in? %>
            <%= link_to "Add Book", new_book_path, class:"btn btn-primary" %>
          <% end %>

	   </div>
	</nav>
  </body>

  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>

</html>
