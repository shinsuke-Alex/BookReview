<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@book) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
	  <%= f.text_field :description %>

      <%= f.label :author  %>
	  <%= f.text_field :author %>

	  <%= f.submit "Create book" , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
